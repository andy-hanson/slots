grad-bg(color-a, color-b, angle=to bottom right)
	background linear-gradient(angle, color-a, color-b)

html
	height 100%

body
	grad-bg #aaa, #eee, -45deg
	background-repeat no-repeat
	background-attachment fixed
	margin 0
	height 100%

#all
	margin-left auto
	margin-right auto
	width 300px
	border-radius 40px

#gameCanvas
	background-color #ffffff40
	border-radius 80px

#score
	text-align center
	font-family Impact
	font-weight bold
	font-size 60px
	margin-top -10px
	margin-bottom -10px
